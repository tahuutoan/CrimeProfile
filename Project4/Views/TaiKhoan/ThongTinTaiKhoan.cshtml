@model Project4.Models.QuanNgucprTessssstt
@{
    ViewBag.Title = "ThongTinTaiKhoan";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
<style>
    div .row {
        font-family: Arial, sans-serif;
    }
</style>
<br />
<h2>Thông tin tài khoản</h2>
<br />
<br />
<div class="row" id="quanNgucForm">
    <div class="col-md-6" style="border: 3px">
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayNameFor(model => model.TenQuanNguc):
                @Html.DisplayFor(modelItem => Model.TenQuanNguc)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayNameFor(model => model.NgaySinh):

                @if (Model.NgaySinh.HasValue)
                {
                    <span>@Model.NgaySinh.Value.ToString("dd/MM/yyyy")</span>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayNameFor(model => model.KhuID):
                @Html.DisplayFor(modelItem => Model.KhuID)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayNameFor(model => model.NamCongTac):
                @if (Model.NamCongTac.HasValue)
                {
                    <span>@Model.NamCongTac.Value.ToString("dd/MM/yyyy")</span>
                }
            </div>
        </div>
        <div class="form-group"> 
            <div class="col-md-12">
                @Html.DisplayNameFor(model => model.ThoiHanCongTac): 
                @if (Model.ThoiHanCongTac.HasValue) 
                {
                <span>@Model.ThoiHanCongTac.Value.ToString("dd/MM/yyyy")</span>
                }
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayNameFor(model => model.CMND):
                @Html.DisplayFor(modelItem => Model.CMND)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayNameFor(model => model.ChucVu):
                @Html.DisplayFor(modelItem => Model.ChucVu)
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-12">
                @Html.DisplayNameFor(model => model.QuanHam):
                @Html.DisplayFor(modelItem => Model.QuanHam)
            </div>
        </div>
    </div>
    <div class="col-md-6">
        @if (String.IsNullOrEmpty(Model.AnhNhanDien))
        {
            <img src="~/Common/Image/no-image-icon-23485.png" class="img-fluid" alt="Image" width="400" height="500" />
        }
        else
        {
            <img src="@Url.Content(Model.AnhNhanDien)" class="img-fluid" alt="Image" width="400" height="500" />
        }
    </div>
    <div class="col-md-2"></div>
</div> 
<div class="col-md-3">
    <a class="btn btn-info" href="@Url.Action("DoiMatkhau", "TaiKhoan")">Đổi mật khẩu</a>
</div>
<br />
<br />
