@model IEnumerable<Project4.Models.CheDoNghiPhepCuaQuanNguc>
<table class="table">
    <tr>   
        <th>
            @Html.DisplayNameFor(model => model.QuanNgucID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SoNgayNghi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LyDoNghi)
        </th>
        <th></th>
    </tr> 

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.QuanNgucID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoNgayNghi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LyDoNghi)
            </td>
            <td>
                @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Chi tiết", "Details", new { id = item.ID }) |
                @Html.ActionLink("Xóa", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>
