@model Project4.Models.Benh

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<br />
<br />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Cập nhật thông tin phạm nhân bị bệnh</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)
        @Html.HiddenFor(model => model.PhamNhanID)
        <div class="form-group">
            <label class="control-label col-md-2">Phạm nhân bị bệnh</label>
            <div class="col-md-10">
                @Html.HiddenFor(model => model.PhamNhan.TenPhamNhan)
                @Html.EditorFor(model => model.PhamNhan.TenPhamNhan, null, new
                { htmlAttributes = new { @class = "form-control col-md-4", disabled = "disabled" } })
                @Html.ValidationMessageFor(model => model.PhamNhan.TenPhamNhan, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2">Số ngày chữa trị</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NgayChuaTri, new { htmlAttributes = new { @class = "form-control col-md-4" } })
                @Html.ValidationMessageFor(model => model.NgayChuaTri, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Lưu lại" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Quay lại trang", "Index")
</div>
